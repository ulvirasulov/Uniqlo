@using Uniqlo.ViewModels.Account
@model LoginVm

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Register</title>

    <style>
        /* Basic reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            color: #333;
        }

        /* Main content */
        .main-content {
            padding: 20px;
        }

        /* Breadcrumb area */
        .breadcrumb-area {
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 100px 0;
            text-align: center;
            color: white;
        }

            .breadcrumb-area .container {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            .breadcrumb-area .breadcrumb-item h2 {
                font-size: 36px;
                font-weight: bold;
            }

            .breadcrumb-area .breadcrumb-item ul {
                list-style: none;
                padding: 0;
                margin: 10px 0;
            }

                .breadcrumb-area .breadcrumb-item ul li {
                    display: inline-block;
                    font-size: 16px;
                }

                    .breadcrumb-area .breadcrumb-item ul li a {
                        color: white;
                        text-decoration: none;
                        transition: color 0.3s;
                    }

                        .breadcrumb-area .breadcrumb-item ul li a:hover {
                            color: #ffcc00;
                        }

        /* Login and Register area */
        .login-register-area {
            padding: 50px 0;
        }

        /* Login form */
        .login-form {
            background-color: white;
            padding: 40px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .login-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .login-form .row {
            margin-bottom: 15px;
        }

        .login-form label {
            font-size: 16px;
            margin-bottom: 8px;
            display: block;
        }

        .login-form input {
            width: 100%;
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 15px;
        }

            .login-form input:focus {
                border-color: #ffcc00;
                outline: none;
            }

        /* Remember me checkbox */
        .check-box {
            display: flex;
            align-items: center;
        }

            .check-box input {
                margin-right: 10px;
            }

        /* Forgotten password link */
        .forgotton-password_info {
            text-align: right;
        }

            .forgotton-password_info a {
                font-size: 14px;
                color: #007bff;
                text-decoration: none;
            }

                .forgotton-password_info a:hover {
                    text-decoration: underline;
                }

        /* Submit button */
        .btn-custom-size {
            padding: 12px 25px;
            font-size: 16px;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
        }

            .btn-custom-size:hover {
                background-color: #0056b3;
            }

        /* Validation error message */
        .text-danger {
            color: red;
        }


        .responsive {
            display: block;
        }

        /* Apply styles for screens smaller than 768px */
        .login-register-area {
            padding: 40px 20px !important; /* Adjust padding for mobile screens */
        }

        .login-form {
            padding: 30px !important; /* Adjust padding for login form */
        }

        .breadcrumb-area {
            padding: 60px 0 !important; /* Adjust breadcrumb padding */
        }

            .breadcrumb-area .breadcrumb-item h2 {
                font-size: 24px !important; /* Reduce breadcrumb heading size */
            }

            .breadcrumb-area .breadcrumb-item ul li {
                font-size: 14px !important; /* Adjust breadcrumb text size */
            }

        .btn-custom-size {
            padding: 10px 20px !important; /* Adjust button size on mobile */
            font-size: 14px !important;
        }

        .login-title {
            font-size: 22px !important; /* Adjust title size for smaller screens */
        }



        .login-form {
            padding: 30px;
        }

        .breadcrumb-area {
            padding: 60px 0;
        }

            .breadcrumb-area .breadcrumb-item h2 {
                font-size: 24px;
            }

            .breadcrumb-area .breadcrumb-item ul li {
                font-size: 14px;
            }

        .btn-custom-size {
            padding: 10px 20px;
            font-size: 14px;
        }

        .login-title {
            font-size: 22px;
        }

        
    </style>
</head>

<body>
    <main class="main-content">
        <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-lg-12">
                        <div class="breadcrumb-item">
                            <h2 class="breadcrumb-heading">Login & Register Page</h2>
                            <ul>
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li>Login | Register</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="login-register-area section-space-y-axis-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <form method="post">
                            <div class="login-form">
                                <h4 class="login-title">Login</h4>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label asp-for="EmailOrUsername">Email Or Username*</label>
                                        <input asp-for="EmailOrUsername" placeholder="Email Or Username" />
                                    </div>
                                    <div class="col-lg-12">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password" />
                                    </div>
                                    <div class="col-md-8">
                                        <div class="check-box">
                                            <input asp-for="Remember" id="remember_me" />
                                            <label asp-for="Remember">Remember me</label>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger">
                                    </div>
                                    <div class="col-md-4 pt-1 mt-md-0">
                                        <div class="forgotton-password_info">
                                            <a asp-action="ForgetPassword"> Forgotten password?</a>
                                        </div>
                                    </div>
                                    <div class="col-lg-12 pt-5">
                                        <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                            Login
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>