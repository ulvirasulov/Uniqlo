@using Uniqlo.ViewModels.Account
@model RegisterVm

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        /* Basic reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f7f7f7;
            color: #333;
        }

        /* Main content */
        .main-content {
            padding: 20px;
        }

        /* Breadcrumb area */
        .breadcrumb-area {
            background-size: cover;
            background-position: center;
            position: relative;
            padding: 100px 0;
            text-align: center;
            color: white;
        }

        .breadcrumb-area .container {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .breadcrumb-area .breadcrumb-item h2 {
            font-size: 36px;
            font-weight: bold;
        }

        .breadcrumb-area .breadcrumb-item ul {
            list-style: none;
            padding: 0;
            margin: 10px 0;
        }

        .breadcrumb-area .breadcrumb-item ul li {
            display: inline-block;
            font-size: 16px;
        }

        .breadcrumb-area .breadcrumb-item ul li a {
            color: white;
            text-decoration: none;
            transition: color 0.3s;
        }

        .breadcrumb-area .breadcrumb-item ul li a:hover {
            color: #ffcc00;
        }

        /* Login and Register area */
        .login-register-area {
            padding: 50px 0;
        }

        /* Register form */
        .login-form {
            background-color: white;
            padding: 40px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .login-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 30px;
            text-align: center;
        }

        .login-form .row {
            margin-bottom: 15px;
        }

        .login-form label {
            font-size: 16px;
            margin-bottom: 8px;
            display: block;
        }

        .login-form input {
            width: 100%;
            padding: 12px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin-bottom: 15px;
        }

        .login-form input:focus {
            border-color: #ffcc00;
            outline: none;
        }

        /* Validation error message */
        .text-danger {
            color: red;
        }

        /* Submit button */
        .btn-custom-size {
            padding: 12px 25px;
            font-size: 16px;
            background-color: #007bff;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
            width: 100%;
            transition: background-color 0.3s;
        }

        .btn-custom-size:hover {
            background-color: #0056b3;
        }

            .login-form {
                padding: 30px; /* Adjust padding for register form */
            }

            .breadcrumb-area {
                padding: 60px 0; /* Adjust breadcrumb padding */
            }

            .breadcrumb-area .breadcrumb-item h2 {
                font-size: 24px; /* Reduce breadcrumb heading size */
            }

            .breadcrumb-area .breadcrumb-item ul li {
                font-size: 14px; /* Adjust breadcrumb text size */
            }

            .btn-custom-size {
                padding: 10px 20px; /* Adjust button size on mobile */
                font-size: 14px;
            }

            .login-title {
                font-size: 22px; /* Adjust title size for smaller screens */
            }
        
    </style>
</head>

<body>
    <main class="main-content">
        <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
            <div class="container h-100">
                <div class="row h-100">
                    <div class="col-lg-12">
                        <div class="breadcrumb-item">
                            <h2 class="breadcrumb-heading">Login & Register Page</h2>
                            <ul>
                                <li>
                                    <a href="index.html">Home</a>
                                </li>
                                <li>Login | Register</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="login-register-area section-space-y-axis-100">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6 pt-5 pt-lg-0">
                        <form method="post">
                            <div class="login-form">
                                <h4 class="login-title">Register</h4>
                                <div class="row">
                                    <div class="col-md-6 col-12">
                                        <label asp-for="Name">First Name</label>
                                        <input asp-for="Name" placeholder="First Name" />
                                        <span asp-validation-for="Name" style="color:red"></span>
                                    </div>
                                    <div class="col-md-6 col-12">
                                        <label asp-for="Surname">Last Name</label>
                                        <input asp-for="Surname" placeholder="Last Name" />
                                        <span asp-validation-for="Surname" style="color:red"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <label asp-for="Email">Email Address*</label>
                                        <input asp-for="Email" placeholder="Email Address" />
                                        <span asp-validation-for="Email" style="color:red"></span>
                                    </div>
                                    <div class="col-md-12">
                                        <label asp-for="UserName">Username*</label>
                                        <input asp-for="UserName" placeholder="Username" />
                                        <span asp-validation-for="UserName" style="color:red"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Password">Password</label>
                                        <input asp-for="Password" placeholder="Password" />
                                        <span asp-validation-for="Password" style="color:red"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                        <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                        <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-12">
                                        <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                            Register
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>